<Application
    x:Class="MyerSplash.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:MyerSplash.Common"
    xmlns:local="using:MyerSplash"
    xmlns:vm="using:MyerSplash.ViewModel"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary/ColorDictionary.xaml" />
                <ResourceDictionary Source="/ResourceDictionary/StyleDictionary.xaml" />
                <ResourceDictionary Source="/ResourceDictionary/StringDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator x:Key="Locator" />
            <common:AppSettings x:Key="AppSettings" />
            <x:Double x:Key="PosterHeight">60</x:Double>
            <x:Double x:Key="DownloadProgressBarHeight">52</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
